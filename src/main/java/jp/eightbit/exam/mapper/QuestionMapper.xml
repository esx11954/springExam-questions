<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="jp.eightbit.exam.mapper.QuestionMapper">
    <resultMap type="jp.eightbit.exam.entity.Questions" id="questionmap">
        <result column="id" property="questionId"/>
        <result column="sentence" property="questionSentence"/>
        <result column="option1_value" property="option1Value"/>
        <result column="option1_label" property="option1Label"/>
        <result column="option2_value" property="option2Value"/>
        <result column="option2_label" property="option2Label"/>
        <result column="option3_value" property="option3Value"/>
        <result column="option3_label" property="option3Label"/>
        <result column="option4_value" property="option4Value"/>
        <result column="option4_label" property="option4Label"/>
        <result column="answer" property="answer"/>
    </resultMap>

  <select id="findAll" resultMap="questionmap">
    select * from questions
  </select>

  <select id="findOne" resultMap="questionmap">
    select * from questions where id= #{id}
  </select>

</mapper>